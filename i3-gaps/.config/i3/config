# =========
# Apps to autostart
# =========

# === Theme ===
exec --no-startup-id wal -R -t
exec --no-startup-id feh --bg-fill /home/$(whoami)/wallpaper.png

# Notifications
exec --no-startup-id /bin/dunst &

# MPD & ncmpcpp
exec --no-startup-id /bin/mpd --no-daemon &
# exec --no-startup-id /bin/mpd-notification &

# Telegram
exec --no-startup-id /bin/telegram-desktop &

# Clipmenu
exec --no-startup-id /bin/clipit &

# Hide mouse after 3 seconds of inactivity
exec --no-startup-id /bin/unclutter --timeout 3 &

# Compositor
exec --no-startup-id /bin/compton -b

# Tray
exec --no-startup-id /bin/nm-applet &
exec --no-startup-id /bin/volumeicon &

# Polybar
exec --no-startup-id /bin/polybar -r simple &

# Gnome keyring
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 & eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &



# ===========
# Keybindings
# ===========

set $mod Mod4
floating_modifier $mod

set $q 24
set $w 25
set $e 26
set $r 27
set $t 28
set $y 29
set $u 30
set $i 31
set $o 32
set $p 33
set $a 38
set $s 39
set $d 40
set $f 41
set $g 42
set $h 43
set $j 44
set $k 45
set $l 46
set $semicolon 47
set $z 52
set $x 53
set $c 54
set $v 55
set $b 56
set $m 58
set $n 59
set $m 60
set $space 65
set $arrow_u 111
set $arrow_l 113
set $arrow_r 114
set $arrow_d 116

# Terminal
bindsym  $mod+Return                exec --no-startup-id st -c 'st'
bindsym  $mod+Shift+Return          exec --no-startup-id st -c 'st-floating'

bindcode $mod+Shift+$q              kill

# Trans
bindcode $mod+$t                    exec --no-startup-id trans-notify

# Screenshots
bindsym $mod+Print       --release  exec scrot -e 'mv $f ~/Nextcloud/Screenshots'
bindsym $mod+Shift+Print --release  exec scrot -s -e 'mv $f ~/Nextcloud/Screenshots'

# Rofi
bindcode $mod+$d                    exec --no-startup-id LANG=en_US.UTF-8 rofi -show drun
bindcode $mod+Shift+$d              exec --no-startup-id LANG=en_US.UTF-8 rofi -show run
bindcode $mod+Shift+$w              exec --no-startup-id LANG=en_US.UTF-8 rofi -show window

# Pasmenu and dmenu (together with rofi-dmenu from AUR)
bindcode $mod+$p                    exec --no-startup-id LC_ALL=en_US.UTF-8 passmenu
bindcode $mod+Shift+$v              exec --no-startup-id LC_ALL=en_US.UTF-8 clipmenu
bindcode $mod+Shift+$p              exec --no-startup-id LC_ALL=en_US.UTF-8 passmenu --type

# MPD
bindcode $mod+Shift+$s              exec --no-startup-id mpc stop
bindcode $mod+$n                    exec --no-startup-id mpc next
bindcode $mod+Shift+$n              exec --no-startup-id mpc prev
bindcode $mod+Shift+$m              exec --no-startup-id mpc toggle

# Restart Polybar
bindcode $mod+Shift+$b              exec --no-startup-id polyrestart.sh

# Scrot
bindsym  Print                      exec --no-startup-id scrot -z -d 1

# Focus windows
bindcode $mod+$j                    focus left
bindcode $mod+$arrow_l              focus left
bindcode $mod+$k                    focus down
bindcode $mod+$arrow_d              focus down
bindcode $mod+$l                    focus up
bindcode $mod+$arrow_u              focus up
bindcode $mod+$semicolon            focus right
bindcode $mod+$arrow_r              focus right

# Move between windows
bindcode $mod+Shift+$j              move left
bindcode $mod+Shift+$arrow_l        move left
bindcode $mod+Shift+$k              move down
bindcode $mod+Shift+$arrow_d        move down
bindcode $mod+Shift+$l              move up
bindcode $mod+Shift+$arrow_u        move up
bindcode $mod+Shift+$semicolon      move right
bindcode $mod+Shift+$arrow_r        move right

# Split containers
bindcode $mod+$h                    split h
bindcode $mod+$v                    split v

# Layout
bindcode $mod+$s                    layout stacking
bindcode $mod+$w                    layout tabbed
bindcode $mod+$e                    layout toggle split

# Keyboard layout
bindcode $mod+$z                    exec --no-startup-id setxkbmap us
bindcode $mod+$x                    exec --no-startup-id setxkbmap ru
bindcode $mod+$c                    exec --no-startup-id setxkbmap ua

# Resize mode
bindcode $mod+$r                    mode "resize"

# Floating windows
bindcode $mod+Shift+$space          floating toggle
bindcode $mod+$space                focus mode_toggle

# Scratchpad
bindsym  $mod+Shift+minus           move scratchpad
bindsym  $mod+minus                 scratchpad show

# Workspaces
set      $workspace1                "1:    "
set      $workspace2                "2:    "
set      $workspace3                "3:    "
set      $workspace4                "4:    "
set      $workspace5                "5:    "
set      $workspace6                "6:    "
set      $workspace7                "7:    "
set      $workspace8                "8:    "

bindsym  $mod+1                     workspace $workspace1
bindsym  $mod+2                     workspace $workspace2
bindsym  $mod+3                     workspace $workspace3
bindsym  $mod+4                     workspace $workspace4
bindsym  $mod+5                     workspace $workspace5
bindsym  $mod+6                     workspace $workspace6
bindsym  $mod+7                     workspace $workspace7
bindsym  $mod+8                     workspace $workspace8
# bindsym  $mod+9                     workspace 9
# bindsym  $mod+0                     workspace 10

bindsym  $mod+Shift+1               move container to workspace $workspace1
bindsym  $mod+Shift+2               move container to workspace $workspace2
bindsym  $mod+Shift+3               move container to workspace $workspace3
bindsym  $mod+Shift+4               move container to workspace $workspace4
bindsym  $mod+Shift+5               move container to workspace $workspace5
bindsym  $mod+Shift+6               move container to workspace $workspace6
bindsym  $mod+Shift+7               move container to workspace $workspace7
bindsym  $mod+Shift+8               move container to workspace $workspace8
bindsym  $mod+Shift+9               move container to workspace 9
bindsym  $mod+Shift+0               move container to workspace 10

bindcode $mod+$a                    focus parent
bindcode $mod+$f                    fullscreen toggle
bindcode $mod+Shift+$c              reload
bindcode $mod+Shift+$r              restart
bindcode $mod+$m                    exec --no-startup-id i3-msg workspace $workspace7\; 
bindsym  --whole-window button9     floating toggle
bindsym  --whole-window button8     kill



# =================
# Window properties
# =================

focus_follows_mouse no

# Borders
for_window [class="^.*"] border pixel 1
for_window [class="^([tT]ermite|[sS]t)"] border pixel 0

# Window assignment
assign     [class="^([fF]irefox|[qQ]utebrowser)"]             $workspace2
assign     [class="^[eE]macs"]                                $workspace3
assign     [class="^[sS]team"]                                $workspace4
assign     [class="^([tT]elegram|[dD]iscord|[sS]ignal)"]      $workspace5
assign     [class="^([gG]imp|[kK]rita)"]                      $workspace6
assign     [class="^[tT]ermite" title="ncmpcpp"]              $workspace7

# Floating
for_window [class="^([sS]t-floating|bitwarden)"]              floating enable

# Gaps
smart_gaps      on
smart_borders   on
gaps inner      20
gaps outer      3



# =====
# Modes
# =====

# Power
bindsym  $mod+End                   exec --no-startup-id setxkbmap us, mode "$mode_power";
set      $Locker                    ${HOME}/.config/i3/lock.sh
set      $mode_power                System (l)ock, log(o)ut, (s)uspend, (h)ibernate, (r)eboot, (S)hutdown
mode "$mode_power" {
    bindcode $l                     exec --no-startup-id $Locker, mode "default"
    bindcode $o                     exec --no-startup-id i3-msg exit, mode "default"
    bindcode $s                     exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindcode $h                     exec --no-startup-id $Locker && systemctl hibernate -i, mode "default"
    bindcode $r                     exec --no-startup-id systemctl reboot, mode "default"
    bindcode Shift+$s               exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym  Return                 mode "default"
    bindsym  Escape                 mode "default"
}


# Resize mode
mode "resize" {
  bindcode $j         resize shrink width 10 px or 10 ppt
  bindcode $j         resize shrink width 10 px or 10 ppt
  bindcode $arrow_l   resize shrink width 10 px or 10 ppt
  bindcode $k         resize grow height 10 px or 10 ppt
  bindcode $arrow_d   resize grow height 10 px or 10 ppt
  bindcode $l         resize shrink height 10 px or 10 ppt
  bindcode $arrow_u   resize shrink height 10 px or 10 ppt
  bindcode $semicolon resize grow width 10 px or 10 ppt
  bindcode $arrow_r   resize grow width 10 px or 10 ppt
  bindsym  Return mode "default"
  bindsym  Escape mode "default"
}

client.focused #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused #333333 #333333 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000

